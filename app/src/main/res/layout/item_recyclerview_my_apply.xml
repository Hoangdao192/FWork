<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPostOwnerAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar" />
                <TextView
                    android:id="@+id/txvPostOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:padding="5dp"
                    android:layout_toRightOf="@id/imgPostOwnerAvatar"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <ImageView
                    android:padding="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_x_thick"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:id="@+id/btnDelete"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txvJobName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Công việc: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJobMajor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Chuyên ngành: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJobAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Nơi làm việc: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJobExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Yêu cầu kinh nghiệm: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJobSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Mức lương dự kiến: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:padding="5dp"
            android:text="Mô tả: "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:id="@+id/txvStatus"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>