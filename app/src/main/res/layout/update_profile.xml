<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEFFF"
    android:backgroundTint="#DDEFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UpdateProfileActivity">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView15"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="200dp"
        android:text="Họ và tên"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="524dp"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="588dp"
        android:text="Điện thoại"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="460dp"
        android:text="Kinh nghiệm"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="325dp"
        android:text="Chuyên ngành"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="392dp"
        android:text="Giới tính"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="265dp"
        android:text="Ngày sinh"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="188dp"
        android:drawablePadding="7dp"
        android:hint="Name:"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/contactEdit"
        android:layout_width="203dp"
        android:layout_height="47dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="512dp"
        android:drawablePadding="7dp"
        android:hint="Contact Email:"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="576dp"
        android:drawablePadding="7dp"
        android:hint="Phone Number:"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dateOfBirthEdit"
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="252dp"
        android:ems="10"
        android:hint="Date of birth "
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/jobEdit"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="316dp"
        android:drawablePadding="7dp"
        android:hint="Job:"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveEdit"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginBottom="44dp"
        android:alpha="0.5"
        android:backgroundTint="#9E1144"
        android:text="Lưu"
        android:visibility="visible"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="494dp"
        android:layout_height="177dp"
        android:foregroundTint="#EFD7D7"
        android:src="@drawable/vector_116"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-27dp" />


    <Button
        android:id="@+id/return_button2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#70899E"
        android:textAlignment="center"
        app:cornerRadius="15dp"
        app:icon="@drawable/arrow_left"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarIv2"
        android:layout_width="101dp"
        android:layout_height="89dp"
        android:layout_marginTop="88dp"
        android:background="#9A9696"
        android:backgroundTint="#DFDBDB"
        android:src="@drawable/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="203dp"
        android:layout_height="46dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="380dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioMale"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:text="Nam" />

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="97dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:text="Nữ" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="117dp"
        android:layout_height="23dp"
        android:layout_marginTop="32dp"
        android:text="Sửa thông tin"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="468dp"
        android:text="năm"
        android:textAlignment="center"
        android:textColor="#5A2D22"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/expEdit"
        android:layout_width="125dp"
        android:layout_height="39dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="456dp"
        android:ems="10"
        android:hint="Experience"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>