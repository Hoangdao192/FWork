<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".account.profile.UpdateCandidateProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="#EFD7D7"
                android:src="@drawable/vector_116"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-27dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cirImgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="75dp"
                android:src="@drawable/wlop_33se"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/camera"
                android:background="@drawable/circle"
                android:backgroundTint="#e5e6eb"
                android:padding="12dp"
                app:layout_constraintRight_toRightOf="@id/cirImgAvatar"
                app:layout_constraintBottom_toBottomOf="@id/cirImgAvatar"
                android:layout_marginBottom="-10dp"
                android:layout_marginRight="-10dp"
                android:id="@+id/imgCamera"
                />

            <TextView
                android:id="@+id/txtTitleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="188dp"
                android:text="Họ và tên"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginEnd="20dp"
                android:hint="Name"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@id/txtTitleName"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/txtTitleBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="248dp"
                android:text="Ngày sinh"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:hint="Date of birth "
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:drawableEnd="@drawable/calendar"
                android:drawableTint="#9B9B9B"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtTitleBirth"/>

            <TextView
                android:id="@+id/txtTitleEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="488dp"
                android:text="Email"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitlePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="548dp"
                android:text="Điện thoại"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitleExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="428dp"
                android:text="Kinh nghiệm"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitleMajor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="308dp"
                android:text="Chuyên ngành"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitleSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="368dp"
                android:text="Giới tính"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="#5A2D22"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <EditText
                android:id="@+id/edtContactEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:hint="Email liên hệ"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtTitleEmail"/>

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtTitlePhone"/>

            <Spinner
                android:id="@+id/spnMajor"
                style="@style/Theme.FWork.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginEnd="20dp"
                android:hint="Chuyên ngành"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtTitleMajor"
                app:layout_constraintBottom_toBottomOf="@id/txtTitleMajor"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                app:backgroundTint="@null"
                android:background="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spnSex"
                style="@style/Theme.FWork.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/txtTitleSex"
                app:layout_constraintBottom_toBottomOf="@id/txtTitleSex"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/quicksand"
                android:text="Sửa thông tin"
                android:textColor="#FFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edtExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="15sp"
                android:layout_marginEnd="20dp"
                android:hint="Kinh nghiệm"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/txtTitleExperience"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9E1144"
                android:text="Lưu"
                android:layout_marginTop="42dp"
                android:layout_marginBottom="40dp"
                android:visibility="visible"
                app:cornerRadius="47dp"
                app:layout_constraintTop_toBottomOf="@id/edtPhoneNumber"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>